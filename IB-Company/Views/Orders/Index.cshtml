@model IEnumerable<IBCompany_Models.OrderVM>

<div class="container p-3 bg-white	">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary"> Заказы клиентов</h2>
		</div>
		
	</div>
	<br /><br />
	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						ID 
					</th>
					<th>
						Фамилия Имя
					</th>
					<th>
						Адрес
					</th>
					<th>
						Статус
					</th>
					
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td width="10%"> @obj.Id</td>
						<td width="30%"> @obj.Name</td>
						<td width="20%"> @obj.Adress</td>
						<td width="10%"> @obj.Status</td>

						<td class="text-center">

							<div class="w-75 btn-group" role="group">
								<a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
									<i class="">Перейти к заказу</i> &nbsp;
								</a>
								
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>

	}
	else
	{
		<p>No category exists.</p>
	}
</div>


