@using IBCompany_Utility;
@model IEnumerable<Product>

@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <!-- Основной контейнер -->
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!-- Расширено до полной ширины -->
                        <div class="card mt-4 w-100">
                            <!-- Добавлен w-100 -->
                            <div class="card-header bg-dark text-light ml-0 row">
                                <div class="col-6">
                                    <i class="fa fa-shopping-cart"></i> &nbsp;
                                    Корзина заказа
                                </div>
                                <div class="col-6 text-right">
                                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Добавить товары</a>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Заголовки только для больших экранов -->
                                <div class="d-none d-lg-block">
                                    <div class="row text-primary fw-bold fs-5">
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-7">
                                            Подробная информация о продукте
                                        </div>
                                        <div class="col-lg-2 text-center">
                                            Цена
                                        </div>
                                        <div class="col-lg-1"></div>
                                    </div>
                                    <hr class="mb-4 mt-0" />
                                </div>

                                <!-- Список товаров -->
                                @foreach (var obj in Model)
                                {
                                    <div class="row h-100 align-items-center mb-3">
                                        <!-- Изображение товара -->
                                        <div class="col-4 col-md-2 text-center py-2">
                                            <img src="@WC.ImagePath@obj.Image" class="rounded img-fluid" />
                                        </div>
                                        <!-- Название и описание -->
                                        <div class="col-8 col-md-7">
                                            <h5>@obj.Name</h5>
                                            <div class="text-muted small">@obj.ShortDesc</div>
                                        </div>
                                        <!-- Цена -->
                                        <div class="col-4 col-md-2 text-center">
                                            <span class="fs-5 text-success">руб.@obj.Price</span><br />
                                            <small class="text-muted">/ ед.</small>
                                        </div>
                                        <!-- Кнопка удаления -->
                                        <div class="col-4 col-md-1 text-center">
                                            <a asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <hr />
                                }

                                <!-- Кнопка "Продолжить" -->
                                <div class="card-footer mt-4">
                                    <div class="row justify-content-end">
                                        <div class="col-6 col-md-3">
                                            <button type="submit" class="btn btn-success w-100">
                                                <i class="fas fa-arrow-right"></i> Продолжить
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
        <h4>Корзина пуста</h4>
        <p>Пожалуйста, добавьте товар в корзину.</p>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Перейти к покупкам</a>
    </div>
}